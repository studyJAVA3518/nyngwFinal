<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nyngw.humanResource.memberJoin.dao.MemberJoinDao">

	<select id="idCheck_MJ" parameterType="String" resultType="com.nyngw.dto.MemberVO">
		select *
		from member
		where mem_id=#{id}
	</select>

	<insert id="joinMember_JM" parameterType="com.nyngw.dto.JoinMemberVO" >
		insert into member (mem_number,mem_id,mem_pwd,mem_name,MEM_BIRTHDAY,mem_reg,mem_zip,mem_addr1,mem_addr2,mem_email,mem_retirement,mem_tel,mem_dept_number,mem_position_number,MEM_MNGR_NUMBER) 
		values('mem'||mem_seq.nextval ,#{mem_id},#{mem_pwd},#{mem_name},#{mem_birthday},#{mem_reg},#{mem_zip},#{mem_addr1},#{mem_addr2},#{mem_email},'1',#{mem_tel},#{mem_dept_number},#{mem_position_number},'role_user')
	</insert>
	
	<insert id="joinMemberMDI_JM" parameterType="com.nyngw.dto.JoinMemberVO" >
		into MEMBER_DETAIL_INFORMATION (MDI_MEM_NUMBER,MDI_BANK,MDI_BANK_ACCOUNT,MDI_ACCOUNT_HOLDER)
		values(#{mem_number},#{mdi_bank},#{mdi_bank_account},#{mem_name})
	</insert>
</mapper>